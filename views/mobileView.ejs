  <div class="todayJob slideBody">
    <div class="">
      <button type="button" name="button" class="minimise"><i class="fas fa-compress"></i></button>
    </div>
    <div class="todayScroll">

    </div>
  </div>
  <div class="openJob slideBody">
    <div class="">
      <button type="button" name="button" class="minimise"><i class="fas fa-compress"></i></button>
    </div>
    <h3>Current Open Jobs</h3>
    <div class="openScroll">

    </div>
  </div>
  <div class="newBooking slideBody">
    <div class="">
      <button type="button" name="button" class="minimise"><i class="fas fa-compress"></i></button>
    </div>

    <div class="preCheck">
      <h1>What are you looking to book?</h1>
      <select class="form-select mobileInput bookingTypeSelect" name="">
        <option>Select One</option>
        <option value="Training">Training</option>
        <option value="Holiday">Holiday</option>
        <option value="Appointment">Appointment</option>
      </select>
      <div class="proceedBooking hidden">
        <button type="button" name="button" class="btn btn-success showBookingForm">Continue</button>
      </div>
      <div class="holOrAppoint hidden">
        <div class="input-group">
          <div class="input-group-prepend">
            <span class="input-group-text" id="basic-addon1">Select Trainer</span>
          </div>
          <select class="form-select mobileInput" name="" id="holOrAppointTrainer">
            <option> Select One</option>
          </select>
        </div>
        <div class="input-group">
          <div class="input-group-prepend">
            <span class="input-group-text" id="basic-addon1">Start Date</span>
          </div>
          <input type="date" name="" value="" class="form-control mobileInput holappStart">
          <div class="input-group-prepend">
            <span class="input-group-text" id="basic-addon1">End Date</span>
          </div>
          <input type="date" name="" value="" class="form-control mobileInput holappEnd">
        </div>
        <textarea name="name" rows="3" class="form-control details" placeholder="Enter Details Here"></textarea>
        <div class="holOrAppointTasks">
          <button type="button" name="button" class="btn btn-success submitHolOrApp">Book</button>
        </div>
      </div>
    </div>
    <div class="newBookingInner hidden">
