<body onload="overFlow()">
  <!-- Diary Body -->
  <div class="landingPage">
    <div class="landingLogo">
    </div>
    <div class="welcomeSign">
      Welcome Jamie!
    </div>
    <div class="landingButtons">

      <div class="">
        <button type="button" name="button" class="landingButton todayJobs">Today</button>
      </div>
      <div class="">
        <button type="button" name="button" class="landingButton openJobs">Open Job(s)</button>
      </div>
      <div class="">
        <button type="button" name="button" class="landingButton">New Booking</button>
      </div>
    </div>
  </div>

  <div class="footer">
    <div class="mailIcon footerText">
      <div class="icon">
        <i class="far fa-envelope"></i>
      </div>
    </div>
    <div class="diaryTab">
      <button type="button" name="button" class="diarySwipe">Diary</button>
    </div>
    <div class="loggedOn footerText">
      <div class="icon">
        <span class="currentUser" data-currentUser="<%= currentUser %>"><%= userInitials %></span>
